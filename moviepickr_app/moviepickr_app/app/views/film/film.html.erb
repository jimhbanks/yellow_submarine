<form action="/" method="get">
  <input type="text" name="title" placeholder="Enter a movie here...">
  <button>GET MOVIE!</button>
</form>

<% if @result %>
    <div class="title">
      <p><%= @result['Title']%></p>
    </div>
    <div class="poster">
      <img src='<%= @result['Poster']%>'/>
    </div> 
      <p>Year: <%= @result['Year']%></p>
      <p>Genre: <%= @result['Genre']%></p>
      <p>Rated: <%= @result['Rated']%></p>
      <p>Starring: <%= @result['Actors']%></p>
      <p>Director: <%= @result['Director']%></p>
      <p>Plot: <%= @result['Plot']%></p>

  
    
<% end %>